<section id="contact" class="section section-center section-contact">
  <div class="container">
    <% if @email.errors.any? %>
      <div class="alert alert-danger alert-dismissable" style="margin-top: 120px;">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <% @email.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %> 
      </div>
    <% end %>
    <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
    <% end %>
    <h2 class="section-title"><span>Contact Us</span></h2>
    <p>Want to say hello? Want to know more about us? Give us a call or drop us an email and we will get back to you as soon as we can.</p>
    <div class="main-action">
      <%= form_for @email, html: { role: "form"} do |f| %>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :subject, class: "sr-only" %>
              <%= f.text_field :subject, class: "form-control", placeholder: "Subject" %>
            </div>
            <div class="form-group">
              <%= f.label :name, class: "sr-only" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: "sr-only" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :message, class: "sr-only" %>
              <%= f.text_area :message, class: "form-control", placeholder: "Message", style: "height: 100px", rows: "6" %>
            </div>
          </div>
        </div>
        <%= f.submit "Send message", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</section>